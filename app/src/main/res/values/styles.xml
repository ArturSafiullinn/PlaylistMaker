<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="TitleTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SettingsOptionsTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
    </style>
    <style name="SettingsOptionsIconStyle">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="tint">@color/icon_gray</item>
        <item name="android:layout_marginEnd">@dimen/settings_options_icon_margin</item>
    </style>
    <style name="MainActivityButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:textAppearance">@style/ButtonTextStyle</item>
    </style>
    <style name="ButtonTextStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>
    <style name="TrackSmallTextStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="android:gravity">start</item>
    </style>
    <style name="ErrorTextStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="SearchActivityButtonStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:backgroundTint">@color/text_black</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:minHeight">48dp</item>
    </style>
    <style name="TrackInfoCharacteristics">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gray1</item>
    </style>
    <style name="TrackInfoValues">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>
</resources>