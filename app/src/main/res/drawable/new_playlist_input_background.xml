<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
        <solid android:color="@color/settings_background_color"/>
        <corners android:radius="4dp"/>
        <stroke android:color="@color/switch_thumb_active_color"
            android:width="1dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/settings_background_color"/>
            <corners android:radius="4dp"/>
            <stroke android:color="@color/icon_gray"
                android:width="1dp"/>
        </shape>
    </item>
</selector>